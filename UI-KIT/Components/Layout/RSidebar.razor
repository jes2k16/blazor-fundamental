@namespace UI_KIT.Components.Layout

<section class="bg-white dark:bg-gray-800 border-l border-gray-200 dark:border-gray-700 w-80" aria-label="financial watchlist sidebar" role="complementary">
    <div class="py-4 h-screen overflow-y-auto scrollbar-hide">
        <!-- Header -->
        <div class="flex justify-between items-center px-4 mb-4">
            <h2 class="text-sm font-medium text-gray-900 dark:text-white">Watchlist</h2>
            <div class="flex items-center space-x-2">
                <button class="text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M10 6a2 2 0 110-4 2 2 0 010 4zM10 12a2 2 0 110-4 2 2 0 010 4zM10 18a2 2 0 110-4 2 2 0 010 4z"/>
                    </svg>
                </button>
                <button class="text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd"/>
                    </svg>
                </button>
            </div>
        </div>
        
        <!-- Column Headers -->
        <div class="px-4 py-2 border-b border-gray-200 dark:border-gray-600">
            <div class="grid grid-cols-4 gap-2 text-xs font-medium text-gray-500 dark:text-gray-400">
                <div>Symbol</div>
                <div class="text-right">Last</div>
                <div class="text-right">Chg</div>
                <div class="text-right">Chg%</div>
            </div>
        </div>

        <!-- Watchlist Sections -->
        @foreach (var wlist in WatchlistSections)
        {
            <div class="mb-4">
                <!-- Section Header -->
                <div class="px-4 py-2 bg-gray-50 dark:bg-gray-700">
                    <h3 class="text-xs font-semibold text-gray-600 dark:text-gray-300 uppercase tracking-wide">
                        @wlist.Title
                    </h3>
                </div>
                
                <!-- Section Items -->
                <div class="divide-y divide-gray-100 dark:divide-gray-600">
                    @foreach (var item in wlist.Items)
                    {
                        <div class="px-4 py-2 hover:bg-gray-50 dark:hover:bg-gray-700 cursor-pointer">
                            <div class="grid grid-cols-4 gap-2 items-center text-sm">
                                <!-- Symbol with Flag -->
                                <div class="flex items-center space-x-2">
                                    <span class="text-base">@item.Flag</span>
                                    <span class="font-medium text-gray-900 dark:text-white">@item.Symbol</span>
                                </div>
                                
                                <!-- Last Price -->
                                <div class="text-right text-gray-900 dark:text-white font-medium">
                                    @item.Last
                                </div>
                                
                                <!-- Change -->
                                <div class="text-right text-sm @(item.IsNegative ? "text-red-500" : "text-green-500")">
                                    @item.Change
                                </div>
                                
                                <!-- Change Percentage -->
                                <div class="text-right text-sm @(item.IsNegative ? "text-red-500" : "text-green-500")">
                                    @item.ChangePercent
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
        
        <!-- Bottom Section - Apple Stock -->
        <div class="px-4 py-4 border-t border-gray-200 dark:border-gray-600">
            <div class="mb-3">
                <span class="text-xs font-semibold text-gray-600 dark:text-gray-300 uppercase tracking-wide">OTHERS</span>
            </div>
            
            <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-4">
                <div class="flex items-center space-x-3 mb-3">
                    <div class="w-8 h-8 bg-black rounded-full flex items-center justify-center">
                        <span class="text-white text-xs font-bold">A</span>
                    </div>
                    <div>
                        <div class="font-medium text-gray-900 dark:text-white">AAPL</div>
                        <div class="text-xs text-gray-500">Apple Inc (2%). NASDAQ</div>
                    </div>
                    <div class="ml-auto flex space-x-2">
                        <button class="text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200">
                            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                        </button>
                        <button class="text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200">
                            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                            </svg>
                        </button>
                        <button class="text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200">
                            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M10 6a2 2 0 110-4 2 2 0 010 4zM10 12a2 2 0 110-4 2 2 0 010 4zM10 18a2 2 0 110-4 2 2 0 010 4z"/>
                            </svg>
                        </button>
                    </div>
                </div>
                
                <div class="text-center">
                    <div class="text-2xl font-bold text-gray-900 dark:text-white mb-1">256.87</div>
                    <div class="text-xs text-gray-500 mb-1">USD</div>
                    <div class="flex items-center justify-center space-x-2">
                        <span class="text-green-500 text-sm font-medium">+4.56</span>
                        <span class="text-green-500 text-sm font-medium">+1.81%</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>