@namespace UI_KIT.Components.Layout


<section class="bg-gray-50 dark:bg-gray-950">
    <div>
        <div class="border border-r-0 border-l-0 border-gray-200 dark:border-gray-600 bg-gray-100 dark:bg-gray-700">
            <div class="flex items-center justify-center py-2 relative">
                <!-- Spacer for left side to balance the right side -->
                <!-- Left side - Mobile menu -->
                <div class="absolute left-6 flex items-center lg:hidden">
                    <span id="menu">
                        <SfMenu TValue="MenuItem" Title="" HamburgerMode="true" ShowItemOnClick="true">
                            <MenuItems>
                                <MenuItem Text="Products"></MenuItem>
                                <MenuItem Text="Community"></MenuItem>
                                <MenuItem Text="Markets"></MenuItem>
                                <MenuItem Text="More"></MenuItem>
                            </MenuItems>
                        </SfMenu>
                    </span>
                </div>
                
                <!-- Centered content -->
                <div class="flex items-center">
                    <div class="e-input-group w-72 mr-6">
                        <input class="e-input" type="text" placeholder="Search (Ctrl + K)" aria-label="search" role="textbox" />
                        <span class="e-input-group-icon e-icons e-search"></span>
                    </div>
                    <div class="flex hidden lg:flex">
                        <SfButton CssClass="e-flat py-2 mr-1.5" Content="Products" Type="button" aria-label="home" role="button"></SfButton>
                        <SfButton CssClass="e-flat py-2 mr-1.5" Content="Community" Type="button" aria-label="clients" role="button"></SfButton>
                        <SfButton CssClass="e-flat py-2 mr-1.5" Content="Markets" Type="button" aria-label="marketing" role="button"></SfButton>
                        <SfButton CssClass="e-flat py-2 mr-1.5" Content="More" Type="button" aria-label="contacts" role="button"></SfButton>
                    </div>
                </div>

                <!-- Right side content -->
                <div class="absolute right-6 flex items-center">
                    <!-- Upgrade Button -->
                    <button class="bg-gradient-to-r from-purple-600 to-blue-600 text-white px-3 py-1.5 rounded-full text-sm font-medium hover:from-purple-700 hover:to-blue-700 transition-all duration-200 mr-3 hidden sm:flex items-center space-x-1">
                        <span>Upgrade now</span>
                        <span class="bg-white bg-opacity-20 px-2 py-0.5 rounded-full text-xs">30-day free trial</span>
                    </button>
                    
                    <div class="border border-r border-gray-200 dark:border-gray-600 h-7 hidden sm:block mr-2"></div>
                    <span class="relative e-avatar e-avatar-small e-avatar-circle ml-1.5 mr-1.5 lg:mr-0">
                        <img src="assets/images/common/avatar/avatar-3.jpg" alt="profile picture" />
                        <!-- Red notification dot -->
                        <span class="absolute -top-1 -right-1 w-3 h-3 bg-red-500 border-2 border-white dark:border-gray-700 rounded-full"></span>
                    </span>
                </div>
            </div>
        </div>
    </div>
</section>