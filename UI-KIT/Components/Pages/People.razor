            <h2 class="text-lg font-semibold text-gray-900 dark:text-white">Team Directory</h2>
        </div>
        <div class="divide-y divide-gray-200 dark:divide-gray-700">
            <!-- Person 1 -->
            <div class="p-6 hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
                <div class="flex items-center justify-between">
                    <div class="flex items-center space-x-4">
                        <div class="relative">
                            <img class="w-12 h-12 rounded-full" src="assets/images/common/avatar/avatar-4.jpg" alt="Profile">
                            <div class="absolute bottom-0 right-0 w-3 h-3 bg-green-500 border-2 border-white dark:border-gray-800 rounded-full"></div>
                        </div>
                        <div>
                            <h3 class="text-base font-medium text-gray-900 dark:text-white">David Kim</h3>
                            <p class="text-sm text-gray-600 dark:text-gray-400">Junior Analyst</p>
                            <p class="text-xs text-gray-500 dark:text-gray-400">Trading Department</p>
                        </div>
                    </div>
                    <div class="flex items-center space-x-4">
                        <div class="text-right">
                            <p class="text-sm text-gray-900 dark:text-white">david.kim@company.com</p>
                            <p class="text-xs text-gray-500 dark:text-gray-400">Last active: 5 min ago</p>
                        </div>
                        <div class="flex space-x-2">
                            <button class="p-2 text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
                                <span class="e-icons e-mail"></span>
                            </button>
                            <button class="p-2 text-gray-400 hover:text-green-600 dark:hover:text-green-400 transition-colors">
                                <span class="e-icons e-phone"></span>
                            </button>
                            <button class="p-2 text-gray-400 hover:text-purple-600 dark:hover:text-purple-400 transition-colors">
                                <span class="e-icons e-chat"></span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Person 2 -->
            <div class="p-6 hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
                <div class="flex items-center justify-between">
                    <div class="flex items-center space-x-4">
                        <div class="relative">
                            <img class="w-12 h-12 rounded-full" src="assets/images/common/avatar/avatar-5.jpg" alt="Profile">
                            <div class="absolute bottom-0 right-0 w-3 h-3 bg-yellow-500 border-2 border-white dark:border-gray-800 rounded-full"></div>
